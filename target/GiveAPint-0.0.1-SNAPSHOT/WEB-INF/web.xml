<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>GiveAPint</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>giveapint</servlet-name>
    <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>giveapint</servlet-name>
    <url-pattern>/loginUser</url-pattern>
    <url-pattern>/registerUser</url-pattern>
    <url-pattern>/getAllUsers</url-pattern>
    <url-pattern>/getAllLocations</url-pattern>
    <url-pattern>/updateStatus</url-pattern>
    <url-pattern>/updateLocation</url-pattern>
    <url-pattern>/requestBlood</url-pattern>
    <url-pattern>/respondToRequest</url-pattern>
  </servlet-mapping>
</web-app>